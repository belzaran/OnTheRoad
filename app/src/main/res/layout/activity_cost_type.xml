<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trip.CostTypeActivity">

    <TextView
        android:id="@+id/cost_type_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Title"
        android:text="@string/expenses"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <Button
        android:id="@+id/cost_type_button_accommodation"
        style="@style/Button"
        android:text="@string/accommodation"
        app:layout_constraintTop_toBottomOf="@id/cost_type_title"
        app:layout_constraintBottom_toTopOf="@id/cost_type_button_transport"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/cost_type_button_transport"
        style="@style/Button"
        android:text="@string/transport"
        app:layout_constraintTop_toBottomOf="@id/cost_type_button_accommodation"
        app:layout_constraintBottom_toTopOf="@id/cost_type_button_food"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/cost_type_button_food"
        style="@style/Button"
        android:text="@string/food"
        app:layout_constraintTop_toBottomOf="@id/cost_type_button_transport"
        app:layout_constraintBottom_toTopOf="@id/cost_type_button_activity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/cost_type_button_activity"
        style="@style/Button"
        android:text="@string/activity"
        app:layout_constraintTop_toBottomOf="@id/cost_type_button_food"
        app:layout_constraintBottom_toTopOf="@id/cost_type_button_gift"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/cost_type_button_gift"
        style="@style/Button"
        android:text="@string/gift"
        app:layout_constraintTop_toBottomOf="@id/cost_type_button_activity"
        app:layout_constraintBottom_toTopOf="@id/cost_type_button_other"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/cost_type_button_other"
        style="@style/Button"
        android:text="@string/other"
        app:layout_constraintTop_toBottomOf="@id/cost_type_button_gift"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>