<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.garehn.ontheroad">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_road"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_road_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnTheRoad">
        <activity
            android:name=".StatsActivity"
            android:exported="false" />
        <activity android:name=".trip.TripSelectActivity" />
        <activity android:name=".trip.TripListActivity" />
        <activity android:name=".trip.TripActionActivity" />
        <activity android:name=".trip.CostTypeActivity" />
        <activity android:name=".trip.AccommodationActivity" />
        <activity android:name=".trip.TripModifyActivity" />
        <activity android:name=".trip.CostBaseActivity" />
        <activity android:name=".trip.CostModifyActivity" />
        <activity android:name=".trip.CostListActivity" />
        <activity android:name=".trip.CostAddActivity" />
        <activity android:name=".trip.TripAddActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>